graph {
    rankdir=LR

	
    /* Nodes */

    posts[shape=rect]
    posts_id[shape=ellipse, label="ID"]
    post_type[label="post_type"]
    post_parent
    post_type_note[label="='attachment'", shape=note, fontsize=10]

    postmeta[shape=rect]
    meta_key
    meta_value
    meta_key_note[label="='_wp_attached_file'", shape=note, fontsize=10]
    meta_value_note[label="File name of uploaded file,\nrelative to WP uploads directory.", shape=note, fontsize=10]

	
    /* Edges */

    posts--posts_id
    posts--post_type
    posts--post_parent
    post_type--post_type_note
    post_parent--posts_id[style=dotted, label="F.K."]

    postmeta--post_id
    postmeta--meta_id
    postmeta--meta_key
    postmeta--meta_value

    post_id--posts_id[style=dotted, label="F.K."]

    meta_key--meta_key_note[style=dashed]
    meta_value--meta_value_note[style=dashed]

}